 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <h1 id="logo" >Mini Twitter App</h1>
    <button class="createpost" ><a href="/posts/new">Create new post</a></button>
    <main>
        <h1 class="tweet-name"> <i class="fa-solid fa-house"></i> &nbsp;Here Are The Tweet Post That You Might Like &nbsp;</h1>
        <div class="postdiv">
                 <% for( post of posts){ %>
                    <div class="followers-div">
                        <h2> <i class="fa-solid fa-user"></i><%= post.username %></h2>
                  <div class="content-div">
                     <p> <%= post.content  %></p>
                  </div>
                  <button type="submit" class="seepost"> <a href="/posts/<%= post.id%>">See in Detail</a></button>
                  <button type="submit" class="btnedit"><a href="/posts/<%= post.id %>/edit">Edit</a></button>
                  <form method="post" action="/posts/<%= post.id %>?_method=DELETE">
                    <button type="submit" class="btndel">Delete</button>
                  </form>
                </div>
             <% } %>
        </div>
    </main>
</body>
</html>